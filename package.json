{
  "name": "@gxmari007/create-template",
  "version": "0.2.4",
  "author": "James Gao",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "create-template": "dist/index.js",
    "template": "dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "tsup src/index.ts --format cjs",
    "commit": "cz",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin main && npm publish"
    }
  },
  "homepage": "https://github.com/gxmari007/create-template",
  "repository": "git+https://github.com:gxmari007/create-template.git",
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "commander": "^7.0.0",
    "enquirer": "^2.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "tsup": "^3.12.1",
    "typescript": "^4.1.3"
  }
}
